@page
@model Veeggan.Pages.Order.OrderListModel

@{
	var status = HttpContext.Request.Query["status"];
    var cancelled = "text-primary";
    var completed = "text-primary";
    var inProcess = "text-primary";
    var ready="text-primary";

    if (status == "cancelled")
    {
        cancelled = "active text-white";
    }
    else
    {
        if (status == "completed")
        {
            completed = "active text-white";
        }
        else
        {
            if (status == "ready")
            {
                ready = "active text-white";
            }
            else
            {
                inProcess = "active text-white";
            }
        }
    }

}


<div class="container p-3">
	<div class="d-flex justify-content-between">
		<div class="p-2">
			<h2 class="text-primary">Order List</h2>
		</div>
		<div class="p-2">
			<ul class="list-group list-group-horizontal-sm">
				<a style="text-decoration:none;" asp-page="OrderList" asp-route-status="cancelled">
					<li class="list-group-item @cancelled">Cancelled</li>
				</a>
				<a style="text-decoration:none;" asp-page="OrderList" asp-route-status="completed">
					<li class="list-group-item @completed">Completed</li>
				</a>
				<a style="text-decoration:none;" asp-page="OrderList" asp-route-status="ready">
					<li class="list-group-item @ready">Ready For PickUp</li>
				</a>
				<a style="text-decoration:none;" asp-page="OrderList" asp-route-status="inprocess">
					<li class="list-group-item @inProcess">InProcess</li>
				</a>
			</ul>
		</div>
	</div>
</div>





<div class="container p-3">
    <div class="row pt-4">
      <div class="col-6"> 

          <h2 class="text-primary">Order List</h2>
      </div>
      <div class="col-6">

      </div>
    </div>

    <br /><br/>

    <table id="DT_load" class="table table-hover table-striped table-dark" style="width:100%">
        <thead>
            <tr>
                  
                <th>Order ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Order Total</th>
                <th>Pickup Time</th>
                <th></th>

            </tr>
        </thead>
   

    </table>


</div>

<!-- This will load the Data Tables from main.js-->
@section Scripts {
    <script src="~/js/orderList.js"></script>
}